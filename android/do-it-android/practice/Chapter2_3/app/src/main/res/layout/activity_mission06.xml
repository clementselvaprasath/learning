<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    <Button
        android:id="@+id/mission06PanelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="패널 열기"
        android:layout_alignParentTop="true"/>
    <WebView
        android:id="@+id/mission06WebView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mission06PanelButton" />
    <RelativeLayout
        android:id="@+id/mission06Panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/mission06WebView"
        android:background="#ffffffff"
        android:visibility="gone">
        <EditText
            android:id="@+id/mission06InputEdit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/mission06InputButton"
            android:inputType="textUri"/>
        <Button
            android:id="@+id/mission06InputButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이동"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</RelativeLayout>