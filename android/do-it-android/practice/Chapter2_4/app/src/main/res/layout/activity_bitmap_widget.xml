<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/bitmapWidgetLayout01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.muchine.chapter2_4.ui.bitmap.widget.TitleButton
            android:id="@+id/bitmapWidgetTitleButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="4dp"/>
        <com.muchine.chapter2_4.ui.bitmap.widget.TitleBitmapButton
            android:id="@+id/bitmapWidgetArrowLeftButton"
            android:layout_width="32dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"/>
    </RelativeLayout>
</LinearLayout>
