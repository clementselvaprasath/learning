<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/socketText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="버튼을 누르면 소켓 연결됩니다 메시지는 로그를 확인하세요." />

    <Button
        android:id="@+id/socketButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/socketText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="소켓 연결하기"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/socketInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/socketButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="연결할 소켓 서버 IP"
        android:text="127.0.0.1"
        android:textSize="16dp"
        android:textStyle="bold" />
</RelativeLayout>