<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/goodPaintToolsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff"
        android:orientation="horizontal"
        android:padding="5dp">

        <Button
            android:id="@+id/goodPaintColorButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/colorpalette"
            android:text="Color" />

        <Button
            android:id="@+id/goodPaintPenButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/penpalette"
            android:text="Pen" />

        <Button
            android:id="@+id/goodPaintEraserButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/eraser"
            android:text="Eraser" />

        <Button
            android:id="@+id/goodPaintUndoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/undo"
            android:text="Undo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/buttCapButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BUTT"/>
            <RadioButton
                android:id="@+id/roundCapButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ROUND"/>
            <RadioButton
                android:id="@+id/squareCapButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SQUARE"/>
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/goodPaintBoardLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" />
</LinearLayout>